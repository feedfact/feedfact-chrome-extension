{
    //manifest spec: http://developer.chrome.com/extensions/manifest.html
    //required
    "name": "Feedfact.org Chrome Extension",
    "version": "1.0",
    "manifest_version": 2,

    //recommended
    "description": "This should allow you to rank and view results from feedfact.org",
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    //required
    "browser_action": {
        "default_title": "browser_action: default_title",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_popup": "html/main.html"
    },
    "content_scripts" : [
      {
        "matches" : ["https://www.facebook.com/*"],
        "js" : ["js/facebook.js"],
        "run_at" : "document_end"
      },
      {
        "matches" : ["*://*/*"],
        "js" : ["js/jquery-1.9.1.min.js","js/article.js"],
        "run_at" : "document_end"
      }
    ],
    "permissions": [
      "storage"
    ],

    //additional
    "options_page": "html/options.html",
    "homepage_url": "http://feedfact.org/"
}
